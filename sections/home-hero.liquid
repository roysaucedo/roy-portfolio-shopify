{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="py-16 md:py-40 mx-auto w-full {{ section.settings.bg }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} section-{{ section.id }}-padding">
  <div class="page-width mx-auto flex flex-col md:flex-row md:items-center {% if section.settings.img_left %}md:flex-row-reverse{% endif %}">
    {% comment %} CONTENT {% endcomment %}
    <div class="py-16 flex justify-center flex-col md:w-1/2">
      <h2 class="text-center md:text-left uppercase font-bold text-7xl md:text-9xl mb-8 {% if section.settings.bg == "bg-black" %}text-white{% endif %}">{{ section.settings.h2 }}</h2>
      <span class="md:text-left mb-16 {% if section.settings.bg == "bg-black" %}text-white{% endif %} {% if section.settings.p_mobile_text_center %}text-center{% endif %}">{{ section.settings.p }}</span>
      <a class="text-center no-underline text-white bg-black px-8 py-4 rounded-lg max-w-md mx-auto md:mx-0 {% if section.settings.btn_text == blank %}hidden{% endif %}" href="{{ section.settings.link }}">
        {{ section.settings.btn_text }}
      </a>
  
    
  
    </div>
    {% comment %} VIDEO/IMAGE {% endcomment %}
    <div class="md:w-1/2">
      <img
      class="w-full h-auto mx-auto"
      src="{{ section.settings.img | image_url: width: 800 }}"
      alt="{{ section.settings.img.alt }}"
      width="{{ section.settings.img.width }}"
      height="{{ section.settings.img.height }}"
      loading="lazy"> 
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Home - Image + Text",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "img_left",
      "label": "Image Left",
      "default": false
    },
    {
      "type": "select",
      "id": "bg",
      "options": [
      {
        "value": "bg-gradient",
        "label": "Gradient"
      },
      {
        "value": "bg-black",
        "label": "Black"
      }
    ],
      "label": "Background Option",
      "default": "bg-gradient"
    },    
    {
      "type": "text",
      "id": "h2",
      "label": "Heading",
      "default": "Place Heading Here"
    },
    {
      "type": "checkbox",
      "id": "p_mobile_text_center",
      "label": "Text Align Center",
      "default": true
    },
    {
      "type": "richtext",
      "id": "p",
      "label": "Paragraph"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Button Text"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Home - Image + Text"
    }
  ]
}
{% endschema %}
