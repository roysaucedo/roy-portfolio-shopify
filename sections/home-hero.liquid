<div class="p-10 mx-auto max-w-4xl w-full bg-blue-100">
  {% comment %} CONTENT {% endcomment %}
  <div>
    <h1 class="text-center uppercase font-bold text-4xl md:text-6xl">{{ section.settings.h1 }}</h1>
    <p>{{ section.settings.p }}</p>
    <a href="{{ section.settings.url }}">
      {{ section.settings.btn_text }}
    </a>

  </div>
 {% comment %} VIDEO/IMAGE {% endcomment %}
  <div>

  </div>
</div>

{% schema %}
{
  "name": "Home - Hero",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "h1",
      "label": "Heading",
      "default": "Place Heading Here"
    },
    {
      "type": "textarea",
      "id": "p",
      "label": "Paragraph",
      "default": "Place Pargraph Here"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Button Text"
    }
  ],
  "presets": [
    {
      "name": "Home - Hero"
    }
  ]
}
{% endschema %}
