<div class="py-40 mx-auto w-full bg-gradient-to-tr from-white from-50% via-cyan-100 to-green-200">
  <div class="page-width mx-auto">
    {% comment %} CONTENT {% endcomment %}
  <div class="md:w-3/4">
    <h1 class="text-center md:text-left uppercase font-bold text-6xl md:text-8xl mb-6">{{ section.settings.h1 }}</h1>
    <p class="mb-10">{{ section.settings.p }}</p>
    <a class="no-underline text-white bg-black px-8 py-4 rounded-lg" href="{{ section.settings.url }}">
      {{ section.settings.btn_text }}
    </a>

  </div>

  </div>
  
 {% comment %} VIDEO/IMAGE {% endcomment %}
  <div>

  </div>
</div>

{% schema %}
{
  "name": "Home - Hero",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "h1",
      "label": "Heading",
      "default": "Place Heading Here"
    },
    {
      "type": "textarea",
      "id": "p",
      "label": "Paragraph",
      "default": "Place Pargraph Here"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text",
      "default": "Button Text"
    }
  ],
  "presets": [
    {
      "name": "Home - Hero"
    }
  ]
}
{% endschema %}
